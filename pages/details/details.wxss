.container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
}

.details,
.birth {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.growth-list {
  margin-top: 20rpx;
}

.growth-card {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.add-btn {
  width: 100%;
  margin-top: 20rpx;
  background: #007aff;
  color: #fff;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.form text {
  display: block;
  margin-top: 10rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cancel-btn {
  background: #ccc;
}

.icon-btn {
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
}

.charts {
  width: 700rpx;
  height: 400rpx;
}

/* 表单滚动容器 */
.form-scroll {
  max-height: 500rpx;
  margin: 20rpx 0;
}

/* 表单样式 */
.form {
  padding: 0;
}

.form text {
  display: block;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}

.form input {
  width: 100%;
  padding: 30rpx 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 80rpx;
  line-height: 1.4;
}

.picker-text {
  padding: 30rpx 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  min-height: 80rpx;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.save-btn {
  background: #007aff;
  color: #fff;
}

/* 生长记录卡片样式 */
.growth-row {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.column {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.column text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.create-time {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #eee;
}

.create-time text {
  font-size: 24rpx;
  color: #999;
}

.icon-group {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
  justify-content: flex-end;
}