/* 背景渐变，使界面更柔和 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20px;
}

/* 登录框 */
.login-box {
  width: 100%;
  max-width: 400px;
  padding: 40px 30px;
  background: #fff;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  text-align: center;
}

/* 标题 */
.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 30px;
  color: #333;
  line-height: 1.4;
}

/* 加载状态 */
.loading-section {
  padding: 20px 0;
}

.loading-text {
  font-size: 18px;
  color: #007AFF;
  margin-bottom: 10px;
  font-weight: 500;
}

.loading-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

/* 注册提示 */
.register-section {
  padding: 20px 0;
}

.register-title {
  font-size: 18px;
  color: #333;
  margin-bottom: 10px;
  font-weight: 500;
}

.register-desc {
  font-size: 14px;
  color: #666;
  margin-bottom: 20px;
  line-height: 1.5;
}

.register-btn {
  width: 100%;
  padding: 15px;
  font-size: 16px;
  color: white;
  background: linear-gradient(45deg, #007AFF, #5AC8FA);
  border: none;
  border-radius: 12px;
  font-weight: bold;
  box-shadow: 0 4px 15px rgba(0, 122, 255, 0.3);
}

/* 成功状态 */
.success-section {
  padding: 20px 0;
}

.success-text {
  font-size: 18px;
  color: #28a745;
  margin-bottom: 10px;
  font-weight: 500;
}

.success-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

