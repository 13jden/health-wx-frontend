/* 背景渐变，使界面更柔和 */
.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: center; */
  height: 100vh;
  background: linear-gradient(to bottom, #eef2f3, #dfe6e9);
}

/* 登录框 */
.login-box {
  width: 70%;
  padding: 30px;
  background: #fff;
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  text-align: center;
}

/* 标题 */
.title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

/* 输入框容器 */
.input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8px;
  padding: 10px;
  margin: 10px 0;
}

/* 图标 */
.icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

/* 输入框 */
.input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 16px;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  padding: 12px;
  margin-top: 10px;
  font-size: 16px;
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
}

.parent {
  background-color: #007AFF;
}

.doctor {
  background-color: #28a745;
}

/* 注册按钮 */
.register-link {
  color: #999;  /* 颜色淡一点 */
  font-size: 14px;  /* 字体稍微小一点 */
  text-align: right;  /* 右对齐 */
  display: block;  /* 让它独占一行，以便右对齐 */
  margin-top: 5px;  /* 增加一点上边距 */
}

