.container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
}

.details,
.birth {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.growth-list {
  margin-top: 20rpx;
}

.growth-card {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.add-btn {
  width: 100%;
  margin-top: 20rpx;
  background: #007aff;
  color: #fff;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.form text {
  display: block;
  margin-top: 10rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cancel-btn {
  background: #ccc;
}

.icon-btn {
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
}.charts {
  width: 700rpx;
  height: 400rpx;
}
/* 页面样式 */
page {
  background-color: #e6f7ff;
  min-height: 100vh;
  padding: 20rpx;
}

.container {
  width: 100%;
}

.modal-content {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
  min-height: 600rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #007acc;
  margin-bottom: 30rpx;
  text-align: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx 0;
  display: block;
}

.child-info, .parent-info {
  margin-bottom: 30rpx;
  padding: 30rpx 20rpx;
  background-color: #f9fcff;
  border-radius: 12rpx;
}

.form text {
  display: block;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.form input {
  margin-top: 10rpx;
  padding: 24rpx 20rpx;
  border: 1rpx solid #cce7ff;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #ffffff;
  width: 100%;
  box-sizing: border-box;
  min-height: 80rpx;
  line-height: 1.4;
}

.add-btn {
  background-color: #4facfe;
  color: white;
  border: none;
  margin-top: 40rpx;
  padding: 20rpx;
  border-radius: 32rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  width: 100%;
}

.result-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 12rpx;
  border-left: 4rpx solid #4facfe;
}

.result-text {
  font-size: 28rpx;
  color: #007acc;
  font-weight: bold;
  line-height: 1.6;
}
