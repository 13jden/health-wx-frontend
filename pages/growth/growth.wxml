
<view class="container">
  <view class="modal-content">
    <text class="modal-title">身高预测</text>
    <scroll-view class="form">
      <!-- 儿童基本信息 -->
      <view class="child-info">
        <text class="section-title">儿童信息</text>
        <text>姓名：{{child.name}}</text>
        <text>性别：{{child.gender}}</text>
        <text>年龄：{{age}} 岁</text>
        <text>当前身高：</text>
        <input type="number" value="{{form.height}}" placeholder="cm" bindinput="onInputChange" data-field="height" />
        <text>当前体重：</text>
        <input type="number" value="{{form.weight}}" placeholder="kg" bindinput="onInputChange" data-field="weight" />
      </view>

      <!-- 父母信息 -->
      <view class="parent-info">
        <text class="section-title">父母信息</text>
        <text>父亲身高：</text>
        <input type="number" value="{{form.far_height}}" placeholder="cm" bindinput="onInputChange" data-field="far_height" />
        <text>母亲身高：</text>
        <input type="number" value="{{form.mo_height}}" placeholder="cm" bindinput="onInputChange" data-field="mo_height" />
      </view>

      <button class="add-btn" bindtap="onSave">开始预测</button>
      
      <view class="result-section" wx:if="{{resultLabel}}">
        <text class="section-title">预测结果</text>
        <text class="result-text">{{resultLabel}}</text>
      </view>
    </scroll-view>
  </view>
</view>


