
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f7fa;
  padding-top: 16rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  color: #8e9aaf;
  font-size: 28rpx;
}

.report-list {
  padding: 16rpx 24rpx 64rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.hero-card {
  position: relative;
  padding: 40rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  color: #ffffff;
  overflow: hidden;
  box-shadow: 0 20rpx 35rpx rgba(79, 70, 229, 0.25);
}

.hero-card::after {
  content: '';
  position: absolute;
  width: 280rpx;
  height: 280rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  right: -40rpx;
  top: -80rpx;
  filter: blur(6rpx);
}

.hero-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hero-title {
  font-size: 44rpx;
  font-weight: 600;
}

.hero-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.hero-tip {
  font-size: 24rpx;
  opacity: 0.7;
}

.hero-action {
  margin-top: 24rpx;
  align-self: flex-start;
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.15);
  font-size: 26rpx;
  font-weight: 500;
  backdrop-filter: blur(6rpx);
}

.hero-action:active {
  opacity: 0.8;
}

/* 报告项 */
.report-item {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 16rpx 30rpx rgba(15, 23, 42, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  position: relative;
  overflow: hidden;
}

.report-item::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(120deg, rgba(79, 70, 229, 0.08), rgba(14, 165, 233, 0.08));
  opacity: 0;
  transition: opacity 0.2s;
  pointer-events: none;
}

.report-item:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 24rpx 40rpx rgba(15, 23, 42, 0.12);
}

.report-item:hover::before {
  opacity: 1;
}

/* 报告头部 */
.report-header {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.report-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.report-title {
  color: #1f2937;
  font-size: 36rpx;
  font-weight: 600;
}

.report-date {
  color: #94a3b8;
  font-size: 24rpx;
}

.report-tag {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(79, 70, 229, 0.1);
  color: #4f46e5;
  font-size: 24rpx;
}

.report-pills {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.report-pill {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: #f1f5f9;
}

.pill-label {
  font-size: 24rpx;
  color: #64748b;
}

.pill-value {
  font-size: 28rpx;
  color: #0f172a;
  font-weight: 600;
}

/* 报告内容 */
.report-summary {
  margin: 20rpx 0 12rpx;
  color: #475569;
  font-size: 26rpx;
  line-height: 1.6;
}

.report-divider {
  height: 1rpx;
  background: linear-gradient(90deg, rgba(226, 232, 240, 0), #e2e8f0, rgba(226, 232, 240, 0));
  margin-bottom: 20rpx;
}

/* 报告底部 */
.report-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.footer-left {
  display: flex;
  flex-direction: column;
}

.report-tip {
  color: #334155;
  font-size: 28rpx;
  font-weight: 600;
}

.report-hint {
  color: #94a3b8;
  font-size: 22rpx;
  margin-top: 4rpx;
}

.report-arrow {
  color: #475569;
  font-size: 22rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.08);
}

.empty-title {
  color: #0f172a;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-text {
  color: #8e9aaf;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-hint {
  color: #a0aec0;
  font-size: 24rpx;
  text-align: center;
  line-height: 1.6;
}

.empty-button {
  margin-top: 24rpx;
  padding: 16rpx 40rpx;
  background: #4f46e5;
  color: #ffffff;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.report-detail {
  margin-top: 20rpx;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
}

.markdown-body h1,
.markdown-body h2,
.markdown-body h3 {
  color: #1e293b;
  margin: 12rpx 0 6rpx;
  font-weight: 600;
}

.markdown-body h1 {
  font-size: 22rpx;
}

.markdown-body h2,
.markdown-body h3,
.markdown-body h4,
.markdown-body h5,
.markdown-body h6 {
  font-size: 16rpx;
}

.markdown-body p {
  color: #4a5568;
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.markdown-body ul,
.markdown-body ol {
  padding-left: 32rpx;
  margin: 12rpx 0;
}

.markdown-body li {
  color: #4a5568;
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 6rpx;
}

.markdown-body strong {
  color: #2d3748;
}

.markdown-body code {
  background: #edf2f7;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.markdown-body pre {
  background: #1f2933;
  color: #e2e8f0;
  padding: 16rpx;
  border-radius: 12rpx;
  overflow: auto;
  margin: 16rpx 0;
}

.markdown-body a {
  color: #3182ce;
  text-decoration: underline;
}

