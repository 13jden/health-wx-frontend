/* 页面整体布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 添加宝宝按钮 */
.add-btn {
  width: 90%;
  padding: 20rpx;
  font-size: 30rpx;
  background-color: #ff9800;
  color: white;
  border-radius: 50rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 宝宝列表 */
.child-list {
  width: 100%;
  margin-top: 40rpx;
}

/* 宝宝卡片 */
.child-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 宝宝头像 */
.child-icon {
  width: 80rpx;
  height: 80rpx;
  margin-left: 10px; /* 左边距增加 */
}

/* 宝宝信息 */
.child-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.child-name {
  font-size: 32rpx;
  font-weight: bold;
}

.child-age {
  font-size: 28rpx;
  color: #888;
}

/* 操作按钮组 */
.icon-group {
  display: flex;
  gap: 20rpx;
}

.icon-btn {
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
}

/* 弹出框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.2);
}

/* 输入框 */
.input {
  width: 100%;
  padding: 20rpx;
  margin: 10rpx 0;
  font-size: 30rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
}

/* 性别选择器 */
.picker {
  padding: 20rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  margin: 10rpx 0;
}

.picker-text {
  font-size: 34rpx;
  font-weight: bold;
}

/* 弹出框按钮 */
.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cancel-btn {
  flex: 1;
  background-color: #ccc;
  color: white;
  margin-right: 10rpx;
  padding: 15rpx;
  text-align: center;
  border-radius: 10rpx;
}

.confirm-btn {
  flex: 1;
  background-color: #4caf50;
  color: white;
  padding: 15rpx;
  text-align: center;
  border-radius: 10rpx;
}
