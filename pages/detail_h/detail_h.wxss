.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.section {
  margin-bottom: 50rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
	margin-bottom: 20rpx;
	text-align: left !important; /* 强制左对齐 */
}

.section-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.section-note {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-top: 10rpx;
  font-style: italic;
}