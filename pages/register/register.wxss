.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(to bottom, #eef2f3, #dfe6e9);
}

.register-box {
  width: 85%;
  padding: 30px;
  background: #fff;
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

.input {
  width: 100%;
  padding: 10px;
  margin: 10px 0;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
}

.register-btn {
  width: 100%;
  padding: 12px;
  margin-top: 10px;
  font-size: 16px;
  color: white;
  background-color: #007AFF;
  border: none;
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
}

.back-btn {
  width: 100%;
  padding: 10px;
  margin-top: 10px;
  font-size: 16px;
  color: #007AFF;
  background: none;
  border: 1px solid #007AFF;
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
}
