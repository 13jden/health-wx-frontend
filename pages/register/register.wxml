<view class="container">
  <view class="register-box">
    <view class="title">完善个人信息</view>
    <view class="subtitle">请填写您的基本信息以完成注册</view>

    <view class="form-group">
      <view class="input-label">姓名</view>
      <input 
        type="text" 
        placeholder="请输入您的姓名" 
        bindinput="onUsernameInput" 
        class="input" 
        value="{{username}}"
      />
    </view>

    <view class="form-group">
      <view class="input-label">手机号</view>
      <input 
        type="number" 
        placeholder="请输入您的手机号" 
        bindinput="onPhoneInput" 
        class="input" 
        value="{{phone}}"
        maxlength="11"
      />
    </view>

    <button class="register-btn" bindtap="onRegisterSubmit">完成注册</button>
    <button class="back-btn" bindtap="onBackToLogin">返回</button>
  </view>
</view>
