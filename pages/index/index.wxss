/* 轮播图 */
.swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 整体页面样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

/* 加载提示 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  font-size: 32rpx;
  color: #666;
}

/* 头部标题 */
.header {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 菜单 */
.menu {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 30rpx 20rpx;
  width: 100%;
  max-width: 100%;
}

/* 菜单项 */
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: calc(50% - 20rpx);
  height: 240rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: all 0.3s;
}

.menu-item:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.15);
}

.menu-item:active {
  transform: scale(0.95);
}

/* 图标 */
.icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

/* 文字 */
.menu-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 订阅消息弹窗 */
.subscribe-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.subscribe-modal-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.subscribe-modal-header {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.subscribe-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.subscribe-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.subscribe-modal-body {
  padding: 32rpx;
}

.subscribe-hint {
  display: block;
  font-size: 26rpx;
  color: #8e9aaf;
  margin-bottom: 32rpx;
}

.subscribe-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.subscribe-item-label {
  font-size: 30rpx;
  color: #2d3748;
}

.subscribe-switch {
  transform: scale(0.9);
}

.subscribe-checkbox-container {
  padding: 24rpx 0;
}

.subscribe-checkbox-label {
  display: flex;
  align-items: center;
}

.subscribe-checkbox-text {
  font-size: 26rpx;
  color: #8e9aaf;
  margin-left: 16rpx;
}

.subscribe-modal-footer {
  display: flex;
  border-top: 1rpx solid #e2e8f0;
}

.subscribe-btn {
  flex: 1;
  height: 96rpx;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7fafc;
}

.reject-btn {
  color: #4CAF50;
  border-right: 1rpx solid #e2e8f0;
}

.allow-btn {
  color: #cbd5e0;
  background: #f7fafc;
}