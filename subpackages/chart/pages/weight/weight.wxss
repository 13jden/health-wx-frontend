.container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
}

.details,
.birth {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.growth-list {
  margin-top: 20rpx;
}

.growth-card {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.add-btn {
  width: 100%;
  margin-top: 20rpx;
  background: #007aff;
  color: #fff;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.form text {
  display: block;
  margin-top: 10rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cancel-btn {
  background: #ccc;
}

.icon-btn {
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
}
.chart-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx;
  width:100%;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.charts {
  width: 100%;
  height: 500px; /* 增加高度 */
}

.charts ec-canvas {
  width: 100%;
  height: 100%;
}
.learn-more {
  display: block;
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #007aff; /* 微信默认蓝色 */
  text-decoration: underline;
}

/* 自定义 Tooltip 悬浮框样式（类似原生 tooltip） */
.tooltip-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999;
  pointer-events: none;
}

.tooltip-box {
  position: absolute;
  background: rgba(50, 50, 50, 0.95);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  min-width: 200rpx;
  max-width: 400rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  pointer-events: auto;
  transform: translate(-50%, -100%);
  /* 提高不透明度，增强视觉层次 */
  backdrop-filter: blur(10rpx);
}

.tooltip-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
  padding-bottom: 6rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.tooltip-content {
  max-height: 400rpx;
  overflow-y: auto;
}

.tooltip-item {
  padding: 4rpx 0;
  font-size: 22rpx;
  line-height: 1.5;
}

.tooltip-text {
  color: #fff;
  word-break: break-all;
}

