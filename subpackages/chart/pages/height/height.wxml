<view class="container">
  <!-- 孩子基本信息 -->
  <view class="header">
    <image class="avatar" src="{{child.avatar || (child.gender == '男' ? '/assets/icons/boy.png' : '/assets/icons/girl.png')}}" />
    <view class="info">
      <text class="name">{{child.name}}</text>
      <text class="details">性别：{{child.gender}} | 年龄：{{age}} 岁</text>
      <text class="birth">出生日期：{{child.birth_time}}</text>
    </view>
  </view>
  
  <text class="name">{{child.name}}身高变化趋势</text>

  <!-- 身高图表 -->
  <view class="chart-section">
    <text class="chart-title">身高变化</text>
    <view class="charts">
      <ec-canvas id="mychart-height" canvas-id="mychart-height" ec="{{ ec }}"></ec-canvas>
    </view>
  </view>
  
  <view wx:if="{{selectedPoint}}" class="point-detail">
    <text class="detail-title">选中数据详情</text>
    <view class="detail-row">
      <text class="label">年龄</text>
      <text class="value">{{selectedPoint.ageLabel || '—'}}</text>
    </view>
    <view class="detail-row">
      <text class="label">测量日期</text>
      <text class="value">{{selectedPoint.dateLabel || '—'}}</text>
    </view>
    <view class="detail-row">
      <text class="label">身高</text>
      <text class="value">{{selectedPoint.height || '—'}} cm</text>
    </view>
    <view class="detail-row" wx:if="{{selectedPoint.weight}}">
      <text class="label">体重</text>
      <text class="value">{{selectedPoint.weight}} kg</text>
    </view>
  </view>
  
  <!-- 了解生长曲线 -->
  <navigator url="/pages/detail_h/detail_h" class="learn-more">
    了解生长曲线图和百分位 >
  </navigator>

</view>